
<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
   <tr>
  <th>follows</th>
  <th>
    <%= link_to followings_user_path(user) do %>
    <%= user.followings.count %><%end%>
    </th>
   </tr>
   <tr>
  <th>follower</th>
  <th><%= link_to "#{user.followers.count}" ,followers_user_path(user) %></th>
   </tr>
</table>

<p class="btn btn-success">
<% if current_user.following?(user) %>
  <%# p class="text-light" %>
  <%= link_to "フォロー外す", user_relationships_path(user.id) ,method: :delete , class: "text-light" %>
  </p>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id), method: :post ,class: "text-light" %>
<% end %>
</p>
